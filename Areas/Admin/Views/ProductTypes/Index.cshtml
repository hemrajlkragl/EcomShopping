@using EcomShopping.Models;
@model IEnumerable<ProductTypes>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-info">
            Product Type List
        </h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-info" asp-action="create">&nbsp; Create New</a>
    </div>
</div>
<div>
    <table class="table table-striped border">
        <tr>
            <th> @Html.DisplayNameFor(c=>c.ProductType)</th>
            <th></th>
        </tr>
        
            @foreach(var item in Model){
                <tr>
                    <td>
                        @item.ProductType
                    </td>
                    <td style="width:150px">
                        <div class="btn-group">
                            <a asp-action="Edit" class="btn btn-primary" asp-controller="ProductTypes" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Details" class="btn btn-success" asp-controller="ProductTypes" asp-route-id="@item.Id">Details</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-controller="ProductTypes" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
    </table>
</div>